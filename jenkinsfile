pipeline {
    agent any
    options {
      ansiColor('xterm')
      timestamps()
      timeout(time: 1, unit: 'HOURS')
    }

    stages {
        stage("Repository") {
            steps {
              //git url: "https://github.com/pynef/jenkins-pipeline.git"
              checkout scm
              sh "echo ${env.WORKSPACE}"
            }
        }
        stage("Build") {
            steps {
              echo "build"
              sh "echo ${env.BUILD_NUMBER}"
            }
        }
        stage("Test") {
            steps {
              sh "echo tests"
              sh "echo ${env.BUILD_URL}"
            }
        }
        stage("Deploy") {
            steps {
              sh "echo deploy"
              sh "echo ${env.JOB_NAME}"
            }
        }
    }
}
